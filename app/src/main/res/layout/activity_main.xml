<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:paddingVertical="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity">

        <include layout="@layout/component_button"
            android:id="@+id/btn_intent"
            />

        <include layout="@layout/component_button"
            android:id="@+id/btn_view_style"
            />

        <include layout="@layout/component_button"
            android:id="@+id/btn_recycler"
            />

        <include layout="@layout/component_button"
            android:id="@+id/btn_fragment"
            />
        <include layout="@layout/component_button"
            android:id="@+id/btn_list_view"
            />

        <include layout="@layout/component_button"
            android:id="@+id/btn_testing"
            />
        <include layout="@layout/component_button"
            android:id="@+id/btn_customview"
            />

        <include layout="@layout/component_button"
            android:id="@+id/btn_navigation_component"
            />

        <include layout="@layout/component_button"
            android:id="@+id/btn_background_thread"
            />

        <include layout="@layout/component_button"
            android:id="@+id/btn_service"
            />


    </LinearLayout>
</ScrollView>
